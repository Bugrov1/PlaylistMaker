<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_black"
    tools:context="com.example.playlistmaker.mediateka.ui.fragments.CreatePlaylistFragment">


    <ImageButton

        style="@style/BackButton"
        android:id="@+id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_button" />


        <TextView
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/backButton"
            app:layout_constraintStart_toEndOf="@id/backButton"
            android:layout_height="@dimen/dp_48"
            android:layout_marginStart="@dimen/dp_12"
            android:text="@string/newPlylist"
            style="@style/TopText" />

    <ImageButton
        android:id="@+id/addPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/add_photo_rectangle"
        android:gravity="center"
        android:src="@drawable/add_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/backButton" />

    <EditText

        android:layout_marginTop="@dimen/dp_32"
        android:height="56dp"
        app:layout_constraintStart_toStartOf="@id/addPhoto"
        app:layout_constraintEnd_toEndOf="@id/addPhoto"
        app:layout_constraintTop_toBottomOf="@id/addPhoto"
        android:id="@+id/EditTextName"
        android:fontFamily="@font/ys_display_regular"
        android:textFontWeight="400"
        android:textSize="@dimen/text_size_settings"
        android:paddingLeft="12dp"
        android:background="@drawable/edit_text_select"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:hint="@string/namePlaylist"
        android:maxLines="1"
        android:inputType="text"
        android:textColor="@color/black_white"

        />

    <EditText

        android:id="@+id/editTextDescription"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/dp_16"
        android:height="56dp"
        android:background="@drawable/edit_text_select"
        android:fontFamily="@font/ys_display_regular"
        android:hint="@string/descripyionPlaylist"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="12dp"
        android:textColor="@color/black_white"
        android:textFontWeight="400"
        android:textSize="@dimen/text_size_settings"
        app:layout_constraintEnd_toEndOf="@id/EditTextName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/EditTextName"

        app:layout_constraintTop_toBottomOf="@id/EditTextName" />

    <TextView
        android:id="@+id/createButton"
        android:layout_width="0dp"
        android:layout_height="44dp"

        android:background="@drawable/create_button_selector"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center"
        android:text="@string/createButton"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="@id/editTextDescription"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/editTextDescription"
        app:layout_constraintTop_toBottomOf="@id/editTextDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.86"
        android:clickable="true"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/dp_32"/>


</androidx.constraintlayout.widget.ConstraintLayout>