<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_4"
    android:layout_marginRight="@dimen/dp_4"
    android:layout_marginTop="@dimen/dp_16"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null">
    <ImageView
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cover"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        app:layout_constraintDimensionRatio="w1:1"
        android:src="@drawable/nothing_found_image"
        />
    <TextView
        card_view:layout_constraintStart_toStartOf="@id/cover"
        android:id="@+id/playlistName"
        card_view:layout_constraintTop_toBottomOf="@id/cover"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_16"
        android:fontFamily="@font/ys_display_regular"
        android:text="Playlist name"
        android:ellipsize="end"
        android:textColor="@color/black_white"
        android:textSize="@dimen/dp_12"
        />
    <TextView
        card_view:layout_constraintStart_toStartOf="@id/playlistName"
        android:id="@+id/playlistLength"
        card_view:layout_constraintTop_toBottomOf="@id/playlistName"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_16"
        android:fontFamily="@font/ys_display_regular"
        android:text="Very long "
        android:ellipsize="end"
        android:textColor="@color/black_white"
        android:textSize="@dimen/dp_12"

        />





</androidx.constraintlayout.widget.ConstraintLayout>