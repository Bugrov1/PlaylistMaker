<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:background="@null"
    android:layout_marginLeft="@dimen/dp_4"
    android:layout_marginRight="@dimen/dp_4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@null">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/placeholderbig"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="w,1:1"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            card_view:layout_constraintStart_toStartOf="parent"
            android:id="@+id/playlistName"
            card_view:layout_constraintTop_toBottomOf="@id/cover"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_16"
            android:fontFamily="@font/ys_display_regular"
            android:text="Playlist name"
            android:ellipsize="end"
            android:textColor="@color/black_white"
            android:textSize="@dimen/dp_12"
            />
        <TextView
            card_view:layout_constraintStart_toStartOf="@id/playlistName"
            android:id="@+id/playlistLength"
            card_view:layout_constraintTop_toBottomOf="@id/playlistName"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_16"
            android:fontFamily="@font/ys_display_regular"
            android:text="Very long "
            android:ellipsize="end"
            android:textColor="@color/black_white"
            android:textSize="@dimen/dp_12"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>